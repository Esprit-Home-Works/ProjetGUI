<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.project.guiproject.controllers.TeamPlayers.AddPlayerController">

    <Label text="Add Player" style="-fx-font-size: 18px;"/>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Name:"/>
        <TextField fx:id="playerNameField"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Age:"/>
        <TextField fx:id="playerAgeField"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Position:"/>
        <TextField fx:id="playerPositionField"/>
    </HBox>

    <Button text="Add Player" onAction="#addPlayer"/>

</VBox>
