<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.guiproject.controllers.matches.matchController"
            prefHeight="400.0" prefWidth="600.0">
    <ImageView fx:id="background" AnchorPane.bottomAnchor="0.0"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="0.0">
    </ImageView>
    <AnchorPane style="-fx-background-color: white;"
                AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0"
                AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
        <Label text="Gestion des matches" AnchorPane.leftAnchor="0.0"
               AnchorPane.topAnchor="0.0">
            <font>
                <Font name="Tahoma Bold" size="36.0" />
            </font>
        </Label>
        <TableView fx:id="matchesList" onMouseClicked="#clickItem"
                   prefHeight="380.0" prefWidth="1146.0"
                   AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
            <columns>
                <TableColumn fx:id="code" minWidth="-Infinity"
                             prefWidth="150.0" text="Code" />
                <TableColumn fx:id="name" minWidth="-Infinity"
                             prefWidth="150.0" text="Name" />
                <TableColumn fx:id="description" minWidth="-Infinity"
                             prefWidth="150.0" text="Description" />
                <TableColumn fx:id="duration" minWidth="-Infinity"
                                prefWidth="150.0" text="Duration" />
                <TableColumn fx:id="startDate" minWidth="-Infinity"
                                prefWidth="150.0" text="Start Date" />
                <TableColumn fx:id="endDate" minWidth="-Infinity"
                                prefWidth="150.0" text="End Date" />

            </columns>
        </TableView>
    </AnchorPane>

</AnchorPane>
